desc "--buildType=staging|production"
desc "Build android"
lane :build_android do |options|	
    buildType = options[:buildType]
    flavor = buildType.capitalize
    
    gradle(
        task: "clean",
        project_dir: 'android/'
    )

    gradle(
        task: "assemble",
        flavor: flavor,
        build_type: "Release",
        project_dir: 'android/'
    )
end
