desc "Send notification to slack"
desc "buildType: prod | staging"
desc "platform: ios | android"
lane :send_slack_notification do |options|

	ios_build_number = get_app_build(platform: "ios")
	android_build_number = get_app_build(platform: "android")
	ios_version = get_app_version(platform: "ios")
	android_version = get_app_version(platform: "android")

	payload =
		{
			"iOS": "#{ios_version} (#{ios_build_number})",
			"Android": "#{android_version} (#{android_build_number})",
			"Notes": File.read("./changelog/changelog.html"),
		}

	slack(
		# message: "PlaceholderName #{readableBuildType} - #{readablePlatform}",
		# icon_url: icon,
        message: "PlaceholderName changelog",
		payload: payload,
		default_payloads:[],
		slack_url: ENV["SLACK_WEB_HOOK"],
		channel: ENV["SLACK_CHANNEL"]
	)
end
