{
  "cli": {
    "version": ">= 12.3.0",
    "appVersionSource": "local",
    "requireCommit": true,
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "env": {
      "GITLAB_PROJECT_ID": "unique gitlab project id"
    },
    "base": {
      "developmentClient": false,
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleStagingRelease",
        "image": "latest"
      },
      "ios": {
        "image": "latest",
        "scheme": "placeholdername staging"
      }
    },
    "previewStaging": {
      "extends": "base",
      "env": {
        "FIREBASE_APP_ID_IOS": "firebase ios staging project id",
        "FIREBASE_APP_ID_ANDROID": "firebase android staging project id"
      }
    },
    "previewProduction": {
      "extends": "base",
      "ios": {
        "scheme": "placeholdername"
      },
      "android": {
        "gradleCommand": ":app:assembleProductionRelease",
        "image": "latest"
      },
      "env": {
        "FIREBASE_APP_ID_IOS": "firebase ios production project id",
        "FIREBASE_APP_ID_ANDROID": "firebase ios production project id"
      }
    },
    "production": {
      "extends": "previewProduction",
      "distribution": "store"
    }
  },
  "submit": {
    "production": {
      "ios": {
        "bundleIdentifier": "com.placeholdername",
        "ascApiKeyId": "APP_ID_CODE",
        "appleTeamId": "E2KG6LTEW8"
      },
      "android": {
        "applicationId": "com.placeholdername",
        "serviceAccountKeyPath": "google.json/path",
        "track": "internal"
      }
    }
  }
}
